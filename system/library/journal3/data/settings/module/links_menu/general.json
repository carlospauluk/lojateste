{
  "name": {
    "type": "Input",
    "value": "New Links Menu"
  },
  "title": {
    "type": "InputLang",
    "php": true
  },
  "moduleTitle": {
    "type": "Variable",
    "variable": "title",
    "selector_prefix": ".links-menu-%s .title.module-title"
  },
  "titleFont": {
    "type": "Font",
    "selector": ".links-menu-%s .title.module-title"
  },
  "titleAlign": {
    "type": "Radio",
    "value": "",
    "rules": {
      "left": {
        ".links-menu-%s .title.module-title":"text-align:left",
        ".links-menu-%s .title.module-title::after": "margin-left:0; margin-right:auto; transform: none"
      },
      "center": {
        ".links-menu-%s .title.module-title":"text-align:center",
        ".links-menu-%s .title.module-title::after": "left: 50%; right:initial; transform: translate3d(-50%,0,0);"
      },
      "right": {
        ".links-menu-%s .title.module-title":"text-align:right",
        ".links-menu-%s .title.module-title::after": "margin-left:auto; margin-right:0; transform:none"
      }
    },
    "rtlRules": {
      "left": {
        ".links-menu-%s .title.module-title":"text-align:left",
        ".links-menu-%s .title.module-title::after": "margin-left:auto; margin-right:0; transform: none"
      },
      "center": {
        ".links-menu-%s .title.module-title":"text-align:center",
        ".links-menu-%s .title.module-title::after": "left: 50%; right:initial; transform: translate3d(-50%,0,0);"
      },
      "right": {
        ".links-menu-%s .title.module-title":"text-align:right",
        ".links-menu-%s .title.module-title::after": "margin-left:0; margin-right:auto; transform:none"
      }
    }
  },
  "titleDivider": {
    "type": "Toggle",
    "value": "",
    "rules": {
      "true": {
        ".links-menu-%s .title.module-title::after": "display: block"
      },
      "false": {
        ".links-menu-%s .title.module-title::after": "display: none"
      }
    }
  },
  "status": {
    "type": "Status"
  },
  "schedule": {
    "type": "Range",
    "php": true
  },
  "Background": {
    "type": "Background",
    "selector": ".links-menu-%s"
  },
  "Padding": {
    "type": "Padding",
    "selector": ".links-menu-%s ul.module-body"
  },
  "MaxHeight": {
    "type": "InputNumber",
    "rules":{
      "@":{
        ".links-menu-%s .module-body": "max-height:%spx"
      }
    }
  },
  "Direction": {
    "type": "Radio",
    "value": "vertical",
    "rules": {
      "vertical": {
        ".links-menu-%s .module-body": "flex-direction:column",
        ".links-menu-%s .menu-item": "border-width: 1px 0 0 0",
        ".links-menu-%s .menu-item a .links-text":"white-space:normal"
      },
      "horizontal": {
        ".links-menu-%s .module-body": "align-items:center; flex-direction:row",
        ".links-menu-%s .menu-item": "border-width: 0 0 0 1px",
        ".links-menu-%s .menu-item a .links-text":"white-space:nowrap"
      }
    },
    "rtlRules": {
      "vertical": {
        ".links-menu-%s .module-body": "flex-direction:column",
        ".links-menu-%s .menu-item": "border-width: 1px 0 0 0",
        ".links-menu-%s .menu-item a .links-text":"white-space:normal"
      },
      "horizontal": {
        ".links-menu-%s .module-body": "align-items:center; flex-direction:row",
        ".links-menu-%s .menu-item": "border-width: 0 1px 0 0",
        ".links-menu-%s .menu-item a .links-text":"white-space:nowrap"
      }
    }
  },
  "layout": {
    "type": "Radio",
    "value": "start",
    "rules": {
      "start": {
        ".links-menu-%s .menu-item": "flex-grow:0",
        ".links-menu-%s .module-body": "justify-content: flex-start;"
      },
      "stretch": {
        ".links-menu-%s .menu-item": "flex-grow:1",
        ".links-menu-%s .menu-item a": "justify-content: center; display:flex;"
      },
      "center": {
        ".links-menu-%s .menu-item": "flex-grow:0",
        ".links-menu-%s .module-body": "justify-content: center;"
      },
      "end": {
        ".links-menu-%s .menu-item": "flex-grow:0",
        ".links-menu-%s .module-body": "justify-content: flex-end;"
      }
    }
  },
  "align": {
    "type": "Radio",
    "value": "start",
    "rules": {
      "start": {
        ".links-menu-%s .menu-item": "justify-content:flex-start",
        ".links-menu-%s .menu-item a": "justify-content:flex-start"
      },
      "center": {
        ".links-menu-%s .menu-item": "justify-content:center",
        ".links-menu-%s .menu-item a": "justify-content:center"
      },
      "end": {
        ".links-menu-%s .menu-item": "justify-content:flex-end",
        ".links-menu-%s .menu-item a": "justify-content:flex-end"
      }
    }
  },
  "itemWidth": {
    "type": "Radio",
    "value": "auto",
    "rules": {
      "auto": {
        ".links-menu-%s .menu-item": "width:auto",
        ".links-menu-%s .menu-item a": "width:auto"
      },
      "full": {
        ".links-menu-%s .menu-item": "width:100%",
        ".links-menu-%s .menu-item a": "width:100%"
      }
    }
  },
  "itemBackground": {
    "type": "Background",
    "selector": ".links-menu-%s .menu-item"
  },
  "itemBackgroundHover": {
    "type": "Background",
    "selector": ".links-menu-%s .menu-item:hover"
  },
  "itemPadding": {
    "type": "Padding",
    "selector": ".links-menu-%s .menu-item a"
  },
  "itemFont": {
    "type": "Font",
    "selector": ".links-menu-%s .menu-item a .links-text"
  },
  "itemFontHover": {
    "type": "Font",
    "selector": ".links-menu-%s .menu-item a:hover .links-text"
  },
  "itemIcon": {
    "type": "Icon",
    "selector": ".links-menu-%s .menu-item a::before"
  },
  "itemIconHover": {
    "type": "Color",
    "selector": ".links-menu-%s .menu-item a:hover::before",
    "property": "color"
  },
  "itemDivider": {
    "type": "Divider",
    "selector": ".links-menu-%s .menu-item"
  },
  "itemDividerHover": {
    "type": "Color",
    "rules": {
      "@": {
        ".links-menu-%s .menu-item:hover": "border-color:%s",
        ".links-menu-%s .menu-item:hover + .menu-item": "border-color:%s"
      }
    }
  },
  "Scroll": {
    "type": "Toggle",
    "value": "false",
    "rules": {
      "true": {
        ".links-menu-%s .module-body": "flex-wrap: nowrap; overflow-x: auto; overflow-y: hidden",
        ".links-menu-%s .menu-item":"white-space:nowrap",
        ".mobile.touchevents .links-menu-%s .module-body": "overflow-x: scroll",
        ".links-menu-%s .module-body::-webkit-scrollbar": "-webkit-appearance: none; height: 3px",
        ".links-menu-%s .module-body::-webkit-scrollbar-track": "background-color: white",
        ".links-menu-%s .module-body::-webkit-scrollbar-thumb": "background-color: #999"
      }
    }
  },
  "ScrollColor": {
    "type": "Color",
    "selector": ".links-menu-%s .module-body::-webkit-scrollbar-thumb",
    "property": "background-color"
  },
  "TrackColor": {
    "type": "Color",
    "selector": ".links-menu-%s .module-body::-webkit-scrollbar-track",
    "property": "background-color"
  },
  "ScrollTouch": {
    "type": "Toggle",
    "value": "true",
    "rules": {
      "true": {
        ".links-menu-%s .module-body": "-webkit-overflow-scrolling:touch;"
      }
    }
  },
  "countBadge": {
    "type": "Variable",
    "variable": "count_badge",
    "selector_prefix": ".links-menu-%s"
  },

  "countBadgeOffset": {
    "type": "InputPair",
    "selector": ".links-menu-%s .count-badge",
    "properties": {
      "first": "transform: translateX(%spx)",
      "second": "margin-top:%spx"
    },
    "rtlProperties":{
      "first": "transform: translateX(calc(0px - (%spx)))",
      "second": "margin-top:%spx"
    }
  },

  "countBadgeVisibility": {
    "type": "Toggle",
    "value": "false",
    "rules": {
      "true": {
        ".links-menu-%s .count-badge": "display: inline-flex"
      },
      "false": {
        ".links-menu-%s .count-badge": "display: none"
      }
    }
  }
}
